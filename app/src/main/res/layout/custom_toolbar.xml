<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/primary"
    android:padding="0dp"
    app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
    app:theme="@style/AppTheme.PopupOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/custom_toolbar_cusomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/customer_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2.6"
            android:textSize="@dimen/text_size_xnormal"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/custom_toolbar_cartImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/ic_action_cart"
                android:layout_marginRight="4dp"
                />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding_tiny">
                
                <TextView
                    android:id="@+id/custom_toolbar_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/label_zero_dollar"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:id="@+id/custom_toolbar_number_of_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/label_zero_dollar"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginLeft="3dp"/>
                
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.Toolbar>