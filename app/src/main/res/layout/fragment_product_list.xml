<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    tools:context="com.example.dominik.prontoshop.ui.productlist.ProductListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_product_list_recyclerView"
        android:background="@android:color/transparent"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/fragment_product_list_emptyText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/primary"
        android:text="@string/no_product_found"
        android:padding="15dp"
        android:gravity="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_product_list_floatActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        android:elevation="6dp"
        android:src="@mipmap/ic_action_add"/>

</RelativeLayout>
